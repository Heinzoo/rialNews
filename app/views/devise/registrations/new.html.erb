<h2>Registrarse</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="input-group py-2">
    <%= f.label :name, "Nombre", class: "input-group-text", style: "background-color: #e3f2fd;" %>
    <%= f.text_field :name, placeholder: "Nombre", class: "form-control", 
      autofocus: true, autocomplete: "new-name" %>
  </div>

  <div class="input-group py-2">
    <%= f.label :email, "Correo Electrónico", class: "input-group-text", style: "background-color: #e3f2fd;" %>
    <%= f.email_field :email, placeholder: "E-Mail", autocomplete: "email", class: "form-control" %>
  </div>

  <div class="input-group py-2">
    <%= f.label :phone, "Telefono", class: "input-group-text", style: "background-color: #e3f2fd;" %>
    <%= f.text_field :phone, placeholder: "Telefono", autocomplete: "new-phone", class: "form-control" %>
  </div>

  <div class="input-group py-2">
    <%= f.label :age, "Edad", class: "input-group-text", style: "background-color: #e3f2fd;" %>
    <%= f.text_field :age, placeholder: "Edad", autocomplete: "new-age", class: "form-control" %>
  </div>

  <div class="input-group py-2">
    <%= f.label :image, "Imagen de Perfil", class: "input-group-text", style: "background-color: #e3f2fd;" %>
    <%= f.text_field :image, placeholder: "URL de Imagen", autocomplete: "new-image", class: "form-control" %>
  </div>

  <div class="input-group py-2">
    <%= f.label :password, "Contraseña", class: "input-group-text", style: "background-color: #e3f2fd;" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <em class="input-group-text" style="background-color: #e3f2fd;">
        (<%= @minimum_password_length %> caracteres minimos)
      </em>
    <% end %><br />
  </div>

  <div class="input-group py-2">
    <%= f.label :password_confirmation, "Confirmar Contraseña", class: "input-group-text", style: "background-color: #e3f2fd;" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions py-2">
    <%= f.submit "Registrarse", class: "btn btn-success rounded-pill fw-semibold text-white" %>
  </div>
<% end %>

<% if false %>
  <%= render "devise/shared/links" %>
<% end %>
